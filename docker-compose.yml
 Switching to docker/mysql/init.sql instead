version: '3.8'

services:
  db:
    image: mysql:8.0
    container_name: wisetrader_db
    environment:
      MYSQL_ROOT_PASSWORD: root2025
      MYSQL_DATABASE: wisetrader_db
      MYSQL_USER: wisetrader
      MYSQL_PASSWORD: wisetrader2025
    ports:
      - "23306:3306"
    volumes:
      - mysql_data:/var/lib/mysql
      - ./docker/mysql/init.sql:/docker-entrypoint-initdb.d/init.sql:ro
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-u", "root", "-proot2025"]
      interval: 10s
      timeout: 5s
      retries: 5

  redis:
    image: redis:7-alpine
    container_name: wisetrader_redis
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5

volumes:
  mysql_data:
  redis_data:

